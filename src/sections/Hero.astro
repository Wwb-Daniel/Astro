---
import ClickSpark from '../components/ClickSpark.tsx';
import StarBorder from '../components/StarBorder.tsx';
---

<section class="min-h-screen flex items-center justify-center px-4 pt-24 pb-32">
    <div class="w-full max-w-sm">
        <!-- Logo y Título -->
        <div class="text-center mb-4">
            <img 
                src="/tebit.svg" 
                alt="Teibit Logo" 
                class="w-12 h-12 mx-auto mb-2"
            />
            <h1 class="text-2xl font-bold text-white mb-1">Teibit 2025</h1>
            <p class="text-blue-300 text-sm">Contáctanos para más información</p>
        </div>

        <!-- Formulario con ClickSpark y StarBorder -->
        <ClickSpark
            client:load
            sparkColor="#fff"
            sparkSize={10}
            sparkRadius={15}
            sparkCount={8}
            duration={400}
        >
            <StarBorder
                client:load
                as="form"
                className="w-full"
                color="#00ffff"
                speed="3s"
                style={{
                    background: 'transparent',
                    padding: '0px'
                }}
            >
                <div class="bg-white/10 backdrop-blur-md rounded-xl p-6 shadow-2xl border border-white/20">
                <div class="space-y-4">
                <!-- Nombre -->
                <div>
                    <label for="name" class="block text-sm font-medium text-blue-300 mb-2">
                        Nombre
                    </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="w-full px-3 py-2 text-sm bg-transparent border border-white/40 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition"
                        placeholder="Tu nombre completo"
                    />
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-blue-300 mb-2">
                        Email
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-3 py-2 text-sm bg-transparent border border-white/40 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition"
                        placeholder="tu@gmail.com"
                    />
                </div>

                <!-- Mensaje -->
                <div>
                    <label for="message" class="block text-sm font-medium text-blue-300 mb-2">
                        Mensaje
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="3"
                        required
                        class="w-full px-3 py-2 text-sm bg-transparent border border-white/40 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition resize-none"
                        placeholder="Escribe tu mensaje aquí..."
                    ></textarea>
                </div>

                <!-- Botón de envío -->
                <button
                    type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 text-sm rounded-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900"
                >
                    Enviar Mensaje
                </button>

                <!-- Información adicional -->
                <div class="mt-4 text-center pt-4 border-t border-white/20">
                    <p class="text-white text-sm">
                        ¿Necesitas ayuda? 
                        <a href="mailto:danielfffreefire0@gmail.com" class="text-cyan-300 hover:text-cyan-200 hover:underline transition font-semibold">
                            contacto@teibit.com
                        </a>
                    </p>
                </div>
            </div>
        </div>
            </StarBorder>
        </ClickSpark>
    </div>
</section>