<header class="fixed top-6 left-1/2 -translate-x-1/2 z-50 pointer-events-auto w-[90%] max-w-[800px]">
    <div class="bg-gradient-to-r from-white/10 via-white/5 to-white/10 backdrop-blur-lg border border-white/20 rounded-full shadow-lg px-6 py-3 flex items-center justify-between">
        <a href="/" class="flex items-center">
            <img class="h-7 w-auto" src="/tebit.svg" alt="Teibit logo">
        </a>
        
        <button id="menu-toggle" class="text-white font-medium flex items-center gap-2 cursor-pointer hover:text-cyan-400 transition-colors">
            <span id="menu-text" class="text-sm">Menu</span>
            <div class="w-[14px] h-[14px] relative">
                <span id="line-h" class="absolute left-1/2 top-1/2 w-full h-[2px] bg-current rounded -translate-x-1/2 -translate-y-1/2 transition-transform duration-300"></span>
                <span id="line-v" class="absolute left-1/2 top-1/2 w-full h-[2px] bg-current rounded -translate-x-1/2 -translate-y-1/2 rotate-90 transition-transform duration-300"></span>
            </div>
        </button>
    </div>
</header>

<!-- Menu Panel -->
<aside id="menu-panel" class="fixed top-0 right-0 w-full md:w-[420px] h-full bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 transform translate-x-full transition-transform duration-500 ease-out z-40 overflow-y-auto">
    <div class="p-8 pt-24">
        <nav>
            <ul class="space-y-4">
                <li>
                    <a href="#inicio" class="menu-link block text-4xl md:text-5xl font-bold text-white hover:text-cyan-400 transition-colors uppercase tracking-tight">
                        <span class="inline-block">Inicio</span>
                    </a>
                </li>
                <li>
                    <a href="#servicios" class="menu-link block text-4xl md:text-5xl font-bold text-white hover:text-cyan-400 transition-colors uppercase tracking-tight">
                        <span class="inline-block">Servicios</span>
                    </a>
                </li>
                <li>
                    <a href="#proyectos" class="menu-link block text-4xl md:text-5xl font-bold text-white hover:text-cyan-400 transition-colors uppercase tracking-tight">
                        <span class="inline-block">Proyectos</span>
                    </a>
                </li>
                <li>
                    <a href="#contacto" class="menu-link block text-4xl md:text-5xl font-bold text-white hover:text-cyan-400 transition-colors uppercase tracking-tight">
                        <span class="inline-block">Contacto</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="mt-12 pt-8 border-t border-white/20">
            <h3 class="text-cyan-400 font-semibold mb-4">Socials</h3>
            <div class="flex gap-6 flex-wrap">
                <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-lg font-medium text-gray-200 hover:text-cyan-400 transition-colors">
                    GitHub
                </a>
                <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-lg font-medium text-gray-200 hover:text-cyan-400 transition-colors">
                    LinkedIn
                </a>
                <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="text-lg font-medium text-gray-200 hover:text-cyan-400 transition-colors">
                    Twitter
                </a>
            </div>
        </div>
    </div>
</aside>

<script>
    const toggle = document.getElementById('menu-toggle');
    const panel = document.getElementById('menu-panel');
    const menuText = document.getElementById('menu-text');
    const lineH = document.getElementById('line-h');
    const lineV = document.getElementById('line-v');
    const menuLinks = document.querySelectorAll('.menu-link');
    
    let isOpen = false;

    toggle?.addEventListener('click', () => {
        isOpen = !isOpen;
        
        if (isOpen) {
            panel?.classList.remove('translate-x-full');
            panel?.classList.add('translate-x-0');
            if (menuText) menuText.textContent = 'Close';
            lineH?.classList.add('rotate-45');
            lineV?.classList.add('-rotate-45');
        } else {
            panel?.classList.add('translate-x-full');
            panel?.classList.remove('translate-x-0');
            if (menuText) menuText.textContent = 'Menu';
            lineH?.classList.remove('rotate-45');
            lineV?.classList.remove('-rotate-45');
        }
    });

    // Cerrar menÃº al hacer clic en un link
    menuLinks.forEach(link => {
        link.addEventListener('click', () => {
            panel?.classList.add('translate-x-full');
            panel?.classList.remove('translate-x-0');
            if (menuText) menuText.textContent = 'Menu';
            lineH?.classList.remove('rotate-45');
            lineV?.classList.remove('-rotate-45');
            isOpen = false;
        });
    });
</script>